<% if @group %>
  <div class="nav-scroller bg-white shadow-sm">
    <ul class="nav justify-content-center">
      <% unless current_user.id == @group.admin_id %>
        <% if current_user.groups.include? @group %>
          <li class="nav-item">
            <%= link_to "Quit",
                        quit_path(:id => @group.id),
                        method: :delete,
                        class:"nav-link"
            %>
          </li>
        <% else %>
          <%= link_to "Join",
                      join_path(:id => @group.id),
                      method: :post,
                      class:"nav-link"
          %>
          </li>
        <% end %>
      <% end %>
      <li class="nav-item">
        <%= link_to "Dashboard",
                    group_path(@group),
                    class:"nav-link active"
        %>
      </li>
      <li class="nav-item">
        <%= link_to "Members",
                    members_path(@group),
                    class:"nav-link"
        %>
      </li>
      <% if current_user.id == @group.admin_id %>
        <li class="nav-item">
          <%= link_to "Edit Group",
                      edit_group_path(@group),
                      class:"nav-link"
          %>
        </li>
        <li class="nav-item">
          <button type="button" class="btn btn-link text-danger" data-toggle="modal" data-target="#exampleModal">
            Delete Group
          </button>
      </li>
      <% end %>
    </ul>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete Group</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure ?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= link_to "Delete Group",
                      @group,
                      method: :delete,
                      data:{confrim:'Are you sure ?'},
                      class: "btn btn-danger"
          %>
        </div>
      </div>
    </div>
  </div>

<% end %>
