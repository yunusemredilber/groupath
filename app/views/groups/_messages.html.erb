<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h6 class="border-bottom border-gray pb-2 mb-0">Messages</h6>
  <% @group.messages.each do |message| %>
    <div class="media text-muted pt-3 ">
      <%= image_tag "62253.png", :alt => "Group",width:"32", height:"32" ,background:"#e83e8c", color:"#e83e8c",class:"mr-2 rounded" %>
      <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark"><%= message.subject %></strong>
        <%= message.text %>
      </p>
    </div>
  <% end %>
  <small class="d-block text-right mt-3">
    <a href="#">All Activity</a>
  </small>
</div>