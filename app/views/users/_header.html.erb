<% if @user %>
  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm clearfix">
    <button type="button" class="btn btn-sm text-danger" data-toggle="modal" data-target="#avatarFormModal">
      <%= image_tag user_avatar_path(@user), :alt => "Group",width:"48", height:"48" ,background:"#e83e8c", color:"#e83e8c",class:"mr-3" %>
    </button>
    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100"><%= "#{@user.first_name} #{@user.last_name}" %></h6>
      <small><%= "@#{@user.username}" %></small>
    </div>
  </div>
<% end %>


<!-- Avatar Form Modal -->
<div class="modal fade" id="avatarFormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <%= form_for @user, :html => {:autocomplete => "off"} do |form| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Avatar</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="avatar-upload">
            <div class="avatar-edit">
              <%= form.file_field :avatar, id:"imageUpload", accept:".png, .jpg, .jpeg" %>
              <label for="imageUpload"></label>
            </div>
            <div class="avatar-preview">
              <div id="imagePreview" style="background-image: url(<%= user_avatar_path(@user) %>);">
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit "Update Avatar", class: "btn btn-primary", disabled: true %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<script>
    listenAvatarUpload();
</script>
