<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h6 class="border-bottom border-gray pb-2 mb-0"><%= fa_icon "comment-o", class: "mr-1" %> Comments</h6>
  <% @message.comments.order('updated_at DESC').each do |comment| %>
    <div id="<%= comment.id %>" class="media text-muted pt-3">
      <%= image_tag "62253.png", :alt => "Comment",width:"32", height:"32" ,background:"#e83e8c", color:"#e83e8c",class:"mr-2 rounded" %>
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark"><%= "#{comment.user.first_name} #{comment.user.last_name}" %></strong>
          <% if comment.user == current_user %>
            <div>
              <%= link_to "Delete", comment_path(id: comment.id), method: :delete %>
            </div>
          <% end %>
        </div>
        <div>
          <%= comment.text %>
          <%= link_to "@#{comment.user.username}", profile_path(comment.user), class:"badge badge-primary ml-1" %>
        </div>
      </div>
    </div>
  <% end %>
  <small class="d-block text-right mt-3">
    <a href="#">All Messages</a>
  </small>
</div>
