<% user = User.find(follow.follower_id) %>
<div class="media text-muted pt-3">
  <%= image_tag user_avatar_path(user), :alt => "User",width:"32", height:"32" ,background:"#e83e8c", color:"#e83e8c",class:"mr-2 rounded-circle" %>
  <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
    <div class="d-flex justify-content-between align-items-center w-100">
      <div>
        <%= link_to "#{user.first_name} #{user.last_name}", profile_path(user), class: "text-gray-dark" %>
         <strong>followed</strong> <%= fa_icon "user-o", class: "mr-1" %> you!
      </div>
      <div>
        <strong class="time-ago pull-right"><%= time_ago_in_words date %></strong>
        <% if current_users_follows %>
          <% if current_users_follows.include? user.id %>
            <%= link_to "Unfollow",
                        unfollow_path(:id => user.id),
                        method: :delete,
                        class:"text-gray-dark pull-right mr-1"
            %>
          <% else %>
            <%= link_to "Follow",
                        follow_path(:id => user.id),
                        method: :post,
                        class:"text-gray-dark pull-right mr-1"
            %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="message_overflow">
      <%= "@#{user.username}" %>
    </div>
  </div>
</div>
