<div class="media text-muted pt-3">
  <%= image_tag "59293.png", :alt => "User",width:"32", height:"32" ,background:"#e83e8c", color:"#e83e8c",class:"mr-2 rounded" %>
  <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
    <div class="d-flex justify-content-between align-items-center w-100">
      <div>
        <%= link_to "#{group.title}", group_path(group), class: "text-gray-dark" %>
        <%= fa_icon "users", class: "mr-1" %>
      </div>
      <div>
        <strong class="time-ago pull-right">Created <%= time_ago_in_words date %> ago</strong>
        <% unless current_user.id == group.admin_id %>
          <% if current_user.groups.include? group %>
              <%= link_to "Quit",
                          quit_path(:id => group.id),
                          method: :delete,
                          class:"text-gray-dark pull-right mr-1"
              %>
          <% else %>
            <%= link_to "Join",
                        join_path(:id => group.id),
                        method: :post,
                        class:"text-gray-dark pull-right mr-1"
            %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="message_overflow">
      <%= "@#{group.groupname}" %>
    </div>
  </div>
</div>
