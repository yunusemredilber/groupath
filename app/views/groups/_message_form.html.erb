<%= form_for @message, :html => {:autocomplete => "off"} do |form| %>
  <% if @message.errors.any? %>
    <% @message.errors.full_messages do |message| %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  <% end %>

  <div class="form-label-group">
    <%= form.select :subject, options_for_select(["General","Important","Help"]), {}, { class: "form-control" } %>
  </div>

  <div class="form-label-group">
    <%= form.text_area :text, class: "form-control", placeholder: "Type Here", required: true, autofocus: true, :autocomplete => :off %>
  </div>

  <div class="d-none">
    <%= form.select :group, options_for_select([@group.groupname.to_s]), {}, { class: "form-control" } %>
  </div>

  <%= form.submit class: "btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" %>
<% end %>