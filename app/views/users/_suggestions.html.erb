<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h6 class="border-bottom border-gray pb-2 mb-0"><%= fa_icon "user", class: "mr-1" %> Suggestions</h6>
  <% @user.follows.each do |follow| %>
    <% usr = User.find(follow.followed_id) %>
    <div class="media text-muted pt-3">
      <%= image_tag "62253.png", :alt => "User",width:"32", height:"32" ,background:"#e83e8c", color:"#e83e8c",class:"mr-2 rounded" %>
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <%= link_to "#{usr.first_name} #{usr.last_name}", profile_path(usr), class: "text-gray-dark" %>
          <% if current_users_follows.include? follow.followed_id %>
            <%= link_to "Unfollow",
                        unfollow_path(:id => usr.id),
                        method: :delete,
                        class:"text-gray-dark"
            %>
          <% else %>
            <%= link_to "Follow",
                        follow_path(:id => @user.id),
                        method: :post,
                        class:"text-gray-dark"
            %>
          <% end %>
        </div>
        <span class="d-block">@<%= usr.username %></span>
      </div>
    </div>
  <% end %>


  <small class="d-block text-right mt-3">
    <a href="#">All suggestions</a>
  </small>
</div>